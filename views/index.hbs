{{#if user}}
<div style="text-align: center; margin-bottom: 20px;">
    <a href="/employees/new">
        <button class="add-employee-btn">Add Employee</button>
    </a>
</div>
{{/if}}

{{#if employees.length}}
    <div class="table-container">        
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                    <th>Start Date</th>
                    <th>Job Title</th>
                    <th>Salary</th>
                    {{#if user}}
                    <th>Actions</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each employees}}
                <tr>
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{department}}</td>
                    <td>{{formatDate startDate}}</td>
                    <td>{{jobTitle}}</td>
                    <td>{{salary}}</td>
                    {{#if ../user}}
                    <td>
                        <div class="action-buttons">
                            <a href="/employees/edit/{{_id}}" class="edit-btn">Edit</a>
                            <a href="/employees/delete/{{_id}}" class="delete-btn">Delete</a>
                        </div>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>    
{{else}}
    <p style="text-align: center; font-weight: bold;">No employees found.</p>
{{/if}}