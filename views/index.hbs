<h1>Employee Management System</h1>

<!-- authentication-based actions -->
{{#if user}}
    <a href="/dashboard"><button>Go to Dashboard</button></a>
{{else}}
    <a href="/auth/login"><button>Login</button></a>
    <a href="/auth/register"><button>Register</button></a>
{{/if}}

<!-- employee Table -->
{{#if employees.length}}
    <div class="table-container">        
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Department</th>
                    <th>Start Date</th>
                    <th>Job Title</th>
                    <th>Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each employees}}
                <tr>
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{department}}</td>
                    <td>{{startDate}}</td>
                    <td>{{jobTitle}}</td>
                    <td>{{salary}}</td>
                    <td>
                        <div class="action-buttons">
                            <a href="/employees/edit/{{_id}}" class="edit-btn">Edit</a>
                            <a href="/employees/delete/{{_id}}" class="delete-btn">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>    
{{else}}
    <p>No employees found.</p>
{{/if}}